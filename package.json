{
  "name": "Altruisto.com",
  "version": "3.0.0",
  "description": "Browser extension that allows users to raise money for charities through online shoppings with no extra costs",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "build": "rm -rf build && webpack",
    "dev:panel": "webpack-dev-server --config-name panel --mode development --inline --hot",
    "dev:chrome": "NODE_ENV=development webpack --config-name chrome --mode development --watch",
    "dev:firefox": "NODE_ENV=development webpack --config-name firefox --mode development --watch",
    "dev": "npm-run-all --parallel dev:chrome dev:firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altruisto/altruisto.git"
  },
  "author": "Daniel Wyrzykowski",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/altruisto/altruisto/issues"
  },
  "homepage": "https://altruisto.com",
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "before-build-webpack": "0.2.9",
    "copy-webpack-plugin": "5.0.3",
    "css-loader": "3.0.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "html-webpack-plugin": "3.2.0",
    "mustache-loader": "1.4.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "source-map-loader": "0.2.4",
    "ts-loader": "6.0.4",
    "typescript": "3.5.3",
    "webextension-polyfill": "0.4.0",
    "webpack": "4.35.3",
    "webpack-cli": "3.3.5",
    "webpack-dev-middleware": "3.7.0",
    "webpack-dev-server": "3.7.2",
    "webpack-extension-reloader": "1.1.0",
    "webpack-hot-middleware": "2.25.0",
    "zip-webpack-plugin": "3.0.0"
  }
}
